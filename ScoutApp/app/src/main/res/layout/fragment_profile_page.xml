<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context="com.syracuse.rameka.scoutapp.ProfilePage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="@drawable/shape4"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileimageProfile"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="35dp"
                    android:layout_weight="1"
                    android:src="@drawable/user_img" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/nameProfile"
                        android:layout_width="0dp"
                        android:layout_weight="7"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:background="@null"
                        android:focusable="false"
                        android:gravity="center"
                        android:paddingLeft="20dp"
                        android:text="Ramakrishna Sayee"
                        android:textColor="#ffff"
                        android:textSize="20sp" />

                    <ImageButton
                        android:id="@+id/firstEdit"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="18dp"
                        android:layout_gravity="left|center"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/editbutton" />
                </LinearLayout>

                <EditText
                    android:id="@+id/descriptionProfile"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:background="@null"
                    android:focusable="false"
                    android:gravity="center"
                    android:text=" Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s"
                    android:textColor="#ffff"
                    android:textSize="15sp" />

                <ImageButton
                    android:id="@+id/secondEdit"
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/mic1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/shape5"
                android:elevation="@dimen/activity_vertical_margin"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="0.28"
                        android:gravity="center"
                        android:text="Email and contact Info"
                        android:textSize="20sp" />

                    <ImageButton
                        android:id="@+id/thirdEdit"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:layout_margin="3dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/editbuttonblack" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layout_marginTop="3dp"
                    android:background="@android:color/darker_gray" />

                <EditText
                    android:id="@+id/emailProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@null"
                    android:focusable="false"
                    android:gravity="center"
                    android:text="rameka@syr.edu"
                    android:textColor="#5e5b5b"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/phoneProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@null"
                    android:focusable="false"
                    android:gravity="center"
                    android:text="+913624556907"
                    android:textColor="#5e5b5b"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/shape5"
                android:elevation="@dimen/activity_vertical_margin"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="0.28"
                        android:gravity="center"
                        android:text="Location"
                        android:textSize="20sp" />

                    <ImageButton
                        android:id="@+id/fourthEdited"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:layout_margin="3dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/editbuttonblack" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layout_marginTop="3dp"
                    android:background="@android:color/darker_gray" />

                <EditText
                    android:id="@+id/locationProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@null"
                    android:focusable="false"
                    android:gravity="center"
                    android:text="Syracuse, NY"
                    android:textColor="#5e5b5b"
                    android:textSize="15sp" />

            </LinearLayout>

            <Button
                android:id="@+id/editClicked"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="3dp"
                android:background="#90A4AE"
                android:text="Save Edited Fields" />

        </LinearLayout>

    </ScrollView>
</FrameLayout>
